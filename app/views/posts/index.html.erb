<div class="row">

  <div class="col-lg-2 col-md-offset-5"></div>

  <div class="col-lg-8 col-md-offset-5">
    <p id="notice">
      <%= notice %>
    </p>
    <h1>Posts</h1>
    <table class="table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Subtitle</th>
          <th>Content</th>
          <th>Posted by</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td>
            <%= post.title %>
          </td>
          <td>
            <%= post.subtitle %>
          </td>
          <td>
            <%= post.content %>
          </td>
          <td>
            <%= post.user.email %>
          </td>
          <td>
            <%= link_to 'Show', post %>
          </td>
          <td>
            <%= link_to 'Edit', edit_post_path(post) %>
          </td>
          <td>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New Post', new_post_path , class: "btn btn-primary"%>
  </div>
  <div class="col-lg-2 col-md-offset-5"></div>
  </div>