<p id="notice"><%= notice %></p>

<p>
  Post created by:  
  <strong> <%= @post.user.email %></strong>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<hr>

<p>
  <strong>Previous Comments:</strong>
  <br>
  <% @post.comments.each do |comment| %>
    <%= comment.user.email %> said 
    <strong> <%= comment.message %> </strong>
    <br>
  <% end %>
</p>

<%= form_for Comment.new, url: '/comments' do |f| %>
  <%= f.text_area :message %>
  <%= f.hidden_field :post_id , value: @post.id %>  
  <br>
  <%= f.submit "Comment" %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
