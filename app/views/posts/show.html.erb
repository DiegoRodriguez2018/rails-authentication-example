<div class ="row">

<div class="col-lg-4 col-md-offset-5">
</div>

<div class="col-lg-4 col-md-offset-5">
<p id="notice"><%= notice %></p>


<h2 class="display-4">
  <%# <strong>Title:</strong> %>
  <%= @post.title %></h2>
<p>
  Posted by   
  <strong> <%= @post.user.email %></strong>
</p>

<h4 class="jumbotron text-monospace">
  <%= @post.content %>
</h4>

<hr>

<h5>
  <strong>Previous Comments:</strong>
  
  <div class="alert alert-info">
  <% @post.comments.each do |comment| %>
    <%= comment.user.email %> said 
    <strong> <%= comment.message %> </strong>
    <br>
  <% end %>
  </div>
</h5>

<%= form_for Comment.new, url: '/comments' do |f| %>
  <%= f.text_area :message %>
  <%= f.hidden_field :post_id , value: @post.id %>  
  <br>
  <%= f.submit "Comment" %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
</div>

<div class="col-lg-4 col-md-offset-5">
</div>


</div>